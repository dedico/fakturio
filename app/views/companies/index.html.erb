<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>House number</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Country</th>
    <th>Vat</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=company.name %></td>
    <td><%=company.address.street %></td>
    <td><%=company.address.house_number %></td>
    <td><%=company.address.city %></td>
    <td><%=company.address.postcode %></td>
    <td><%=company.address.countr %></td>
    <td><%=company.vat %></td>
    <td><%= link_to 'Show', user_company_path(current_user, company) %></td>
    <td><%= link_to 'Edit', edit_user_company_path(current_user, company) %></td>
    <td><%= link_to 'Destroy', user_company_path(current_user, company), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New company', new_user_company_path(current_user) %>